{
  "$schema": "https://biomejs.dev/schemas/2.3.11/schema.json",
  "root": true,
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "lineEnding": "lf"
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true
    }
  },
  "javascript": {
    "formatter": {
      "lineWidth": 120,
      "quoteStyle": "single",
      "trailingCommas": "all",
      "semicolons": "always",
      "bracketSameLine": false
    }
  },
  "json": {
    "formatter": {
      "lineWidth": 10
    }
  },
  "overrides": [
    {
      "includes": [
        "**/*.test.{ts,tsx,mts,cts}",
        "**/*.spec.{ts,tsx,mts,cts}"
      ],
      "linter": {
        "rules": {
          "security": {
            "noSecrets": "off"
          },
          "style": {
            "noNonNullAssertion": "off"
          }
        }
      }
    },
    {
      "includes": [
        "**/*.{ts,tsx,mts,cts}",
        "!**/*.test.{ts,tsx,mts,cts}",
        "!**/*.spec.{ts,tsx,mts,cts}"
      ],
      "linter": {
        "domains": {
          "project": "recommended",
          "react": "recommended"
        },
        "rules": {
          "correctness": {
            "noChildrenProp": "error",
            "useJsxKeyInIterable": "error",
            "useExhaustiveDependencies": "warn",
            "noUnusedVariables": "warn",
            "useHookAtTopLevel": "error",
            "noNestedComponentDefinitions": "error",
            "noReactPropAssignments": "error"
          },
          "nursery": {
            "noUnknownAttribute": "error",
            "noImportCycles": "error",
            "useExplicitType": "error",
            "useSpread": "error",
            "noFloatingPromises": "error",
            "noMisusedPromises": "error",
            "noUnresolvedImports": "error"
          },
          "security": {
            "noDangerouslySetInnerHtmlWithChildren": "error",
            "noDangerouslySetInnerHtml": "error",
            "noSecrets": "error"
          },
          "suspicious": {
            "noVar": "error"
          },
          "style": {
            "useConsistentCurlyBraces": "error",
            "noEnum": "error",
            "noNamespace": "error",
            "noParameterAssign": "error",
            "useConsistentTypeDefinitions": {
              "level": "error",
              "options": {
                "style": "type"
              }
            },
            "useConsistentArrayType": "error",
            "useAtIndex": "error"
          },
          "performance": {
            "noAwaitInLoops": "warn"
          }
        }
      }
    }
  ],
  "assist": {
    "enabled": true,
    "actions": {
      "source": {
        "organizeImports": "on",
        "useSortedProperties": "on"
      }
    }
  }
}
