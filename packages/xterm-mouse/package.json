{
  "name": "xterm-mouse",
  "version": "0.7.6",
  "license": "MIT",
  "description": "A library for working with the mouse in the terminal.",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "publishConfig": {
    "access": "public",
    "provenance": true
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/neiromaster/ink-tools.git",
    "directory": "packages/xterm-mouse"
  },
  "bugs": {
    "url": "https://github.com/neiromaster/ink-tools/issues"
  },
  "homepage": "https://github.com/neiromaster/ink-tools/tree/main/packages/xterm-mouse#readme",
  "keywords": [
    "xterm",
    "terminal",
    "mouse",
    "input",
    "cli",
    "node",
    "typescript"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "prepublishOnly": "pnpm run build",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "test:coverage": "vitest run --coverage",
    "test:gc": "NODE_OPTIONS=\"--expose-gc\" vitest run",
    "dev:basic": "tsx watch examples/basic.ts",
    "dev:streaming": "tsx watch examples/streaming.ts",
    "dev:custom-threshold": "tsx watch examples/custom-threshold.ts",
    "dev:pause-resume": "tsx watch examples/pause-resume.ts",
    "dev:interactive-buttons": "tsx watch examples/interactive-buttons.ts",
    "dev:interactive-menu": "tsx watch examples/interactive-menu.ts",
    "dev:interactive-grid": "tsx watch examples/interactive-grid.ts"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.11",
    "@vitest/coverage-v8": "^4.0.16",
    "dprint": "^0.51.1",
    "markdownlint-cli2": "^0.20.0",
    "tsup": "^8.5.1",
    "tsx": "^4.0.0",
    "typescript": "^5",
    "vitest": "^4.0.16"
  },
  "engines": {
    "node": ">=20"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE",
    "CHANGELOG.md"
  ]
}
