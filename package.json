{
  "name": "ink-tui-kit",
  "type": "module",
  "license": "MIT",
  "devDependencies": {
    "@arethetypeswrong/cli": "^0.18.2",
    "@biomejs/biome": "^2.3.11",
    "@changesets/cli": "^2.29.8",
    "@types/node": "^20.14.15",
    "@vitest/coverage-v8": "^4.0.16",
    "dprint": "^0.51.1",
    "lefthook": "^2.0.13",
    "markdownlint-cli2": "^0.20.0",
    "vitest": "^4.0.16"
  },
  "peerDependencies": {
    "typescript": "^5.9.3"
  },
  "engines": {
    "node": ">=20"
  },
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "typecheck": "tsc --noEmit",
    "format:biome": "biome check --write --unsafe",
    "format:dprint": "dprint fmt",
    "format:markdown": "markdownlint-cli2 \"**/*.md\" --fix",
    "format": "pnpm run format:biome && pnpm run format:dprint && pnpm run format:markdown",
    "check": "biome check",
    "lint:markdown": "markdownlint-cli2 \"**/*.md\"",
    "build": "pnpm -r --filter './packages/*' build",
    "test": "pnpm -r --filter './packages/*' test",
    "test:coverage": "vitest --coverage --coverage.reporter=text",
    "test:coverage:lcov": "vitest --coverage --coverage.reporter=lcov",
    "test:coverage:reporters": "vitest --coverage --coverage.reporter=text --coverage.reporter=lcov"
  }
}
